# Server Configuration
PORT=4000
NODE_ENV=production

# Database Configuration (MySQL)
# 請將以下信息替換為你的真實 MySQL 連接信息
DB_TYPE=mysql
PROD_DB_HOST=192.168.1.100
PROD_DB_PORT=3306
PROD_DB_USER=root
PROD_DB_PASSWORD=your_secure_password
PROD_DB_NAME=nocodb_portal

# Docker Compose Variables
# 這些變量會被 docker-compose.yml 讀取
MYSQL_ROOT_PASSWORD=your_secure_password
MYSQL_DATABASE=nocodb_portal
MYSQL_USER=nocodb_app
MYSQL_PASSWORD=nocodb_password
